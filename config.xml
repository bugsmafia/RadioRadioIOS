	<preference name="AndroidLaunchMode" value="singleTop" />
	<preference name="CordovaWebViewEngine" value="CDVUIWebViewEngine" />
	<preference name="Orientation" value="landscape" />
	<preference name="android-installLocation" value="auto" />
	<plugin name="cordova-plugin-whitelist" version="1" />
	<plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<platform name="ios">
		<allow-intent href="market:*" />
	</platform>

	<icon src="150.png" width="150" height="150" />
	<!-- IOS OK PLUGINS -->
	<plugin spec="https://github.com/phonegap/phonegap-plugin-contentsync.git" source="git" />	
	
	<plugin spec="https://github.com/apache/cordova-plugin-statusbar.git" source="git" />
	<preference name="StatusBarOverlaysWebView" value="true" />
	<preference name="StatusBarBackgroundColor" value="#444444" />
	<preference name="StatusBarStyle" value="lightcontent" />
	
	<plugin spec="https://github.com/apache/cordova-plugin-network-information.git" source="git" />
	
	<plugin spec="https://github.com/apache/cordova-plugin-screen-orientation.git" source="git" />
	
	<plugin spec="https://github.com/apache/cordova-plugin-device.git" source="git" />
