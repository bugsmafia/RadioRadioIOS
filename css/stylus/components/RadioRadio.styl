.logo
    width: 10em
    height: 5em
    margin: 0px auto
    background-image: url(../../logo/3.png)
    background-size: contain
    background-repeat: no-repeat
    background-position: 50%

	
.logoAds a
    width: 10em
    height: 6em
    margin: 0px auto
    background-size: contain
    background-repeat: no-repeat
    background-position: 50%	
    display: block
	
// Вертикальная сетка формирования
.vert_grid
    display: table
    width: 100%
    height: 100%

.vert_grid_box
	display: table-row

.hor_grid
    display: table
    width: 100%

.hor_grid_box
	display: table-cell
	text-align: center
	
// Вывод названия песни

.artist  
  font-size 0.8em
  font-weight 400
  line-height 1em
  display block
  width 100%
  text-align center
  margin-top 0.5em

.song
  font-size 1em
  font-weight 700
  line-height 1em
  display block
  width 100%
  text-align center
	

	
	
	
.playbtn 
	position: relative
	width: 6em
	height: 6em
	margin: 0 auto
	
.playbtn .l1s
	width: 100%
	height: 100%
	position: absolute
	top: 0px
	left: 0px
	background-image: url(../../img/play-l1.png)
	z-index: 1
	background-size: cover

.playbtn .l2s
	width: 100%
	height: 100%
	position: absolute
	top: 0px
	left: 0px
	background-image: url(../../img/play-l2.png) 
	z-index: 3
	background-size: cover
	animation: pulse 5s infinite
	display: none
	
.playbtn .l2sOff
	width: 100%
	height: 100%
	position: absolute
	top: 0px
	left: 0px
	background-image: url(../../img/play-l2u.png) 
	z-index: 3
	background-size: cover
	
.playbtn #l2sOffAnim
	width: calc(100% - 8%)
	height: calc(100% - 8%)
	position: absolute
	top: 0px
	left: 0px
	z-index: 2

	margin: 4%
	border-radius: 50%
	background-color: #2fa8fd;
	display: none;

	
.playbtn .l3sAnim
	width: calc(100% - 30%)
	height: calc(100% - 30%)
	margin: 15%
	border-radius: 50%
	position: absolute
	top: 0px
	left: 0px
	background-color: rgba(255,87,34,1)
	z-index: 8
	
.playbtn .l3s
	width: 100%
	height: 100%
	position: absolute
	top: 0px
	left: 0px
	background-image: url(../../img/play-l3-load.png) 
	z-index: 10
	background-size: cover

.playbtn .l4s
	width: 100%
	height: 100%
	position: absolute
	top: 0px
	left: 0px
	background-image: url(../../img/play-SPa.png)
	z-index: 5
	background-size: cover
	display: none;
	
#poll
	display: none
	
#ads
	display: none
	
#volume
	width: 50%
	position: relative
	height: 0.2em
	
.poll_text
	padding 0em 1em 1em 
	margin 0
	
	
#volume i
    position: absolute;
    left: -1.5em;
    color: rgba(255,255,255,0.5);
    top: -0.42em;
    font-size: 1.3em;

.OnlineCall
	position absolute
	bottom -1.5em
	right -70%
	text-align center
	font-size 0.8em
	color #ffffff
	text-decoration inherit
	
.OnlineCall i
	color #f00
	display block
	font-size 2em

.buttonSMS
	position absolute
	color rgb(250, 176, 50)
	display none
	
.buttonSMS a
	color rgb(250, 176, 50)
	
.buttonCall
	position absolute
	color #f00
	display none
	
.buttonCall a
	color #f00

